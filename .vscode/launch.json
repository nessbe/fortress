{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Sandbox",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/bin/${input:system}/${input:architecture}/${input:build_configuration}/sandbox/sandbox.exe",
			"args": [],
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "Makefiles Build",
			"stopAtEntry": false
		}
	],
	"inputs": [
		{
			"id": "system",
			"description": "Operating System",
			"type": "pickString",
			"options": [
				"windows",
				"linux",
				"macOS"
			],
			"default": "windows"
		},
		{
			"id": "architecture",
			"description": "Architecture",
			"type": "pickString",
			"options": [
				"x86_64"
			],
			"default": "x86_64"
		},
		{
			"id": "build_configuration",
			"description": "Build Configuration",
			"type": "pickString",
			"options": [
				"Debug",
				"Release"
			],
			"default": "Debug"
		}
	]
}
